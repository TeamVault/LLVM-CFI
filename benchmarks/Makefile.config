HOST=$(shell hostname)

ifndef LLVM_CONFIG
config_path := $(dir $(abspath $(lastword $(MAKEFILE_LIST))))../scripts/config.py
LLVM_CONFIG = $(abspath $(config_path))
endif

LLVM_DIR = $(shell $(LLVM_CONFIG) LLVM_DIR)
LLVM_BUILD_DIR = $(shell $(LLVM_CONFIG) LLVM_BUILD_DIR)/Release+Asserts/bin
BINUTILS_BUILD_DIR = $(shell $(LLVM_CONFIG) BINUTILS_BUILD_DIR)

ifeq ($(HOST),paul-MacBookAir) # on local
LLVM_DIR           = $(HOME)/Desktop/llvm/llvm
LLVM_BUILD_DIR     = $(HOME)/Desktop/llvm/llvm-build/Release+Asserts/bin
BINUTILS_BUILD_DIR = $(HOME)/Desktop/llvm/binutils-build
endif

ifeq ($(HOST),gokhan-ativ9) # on local
LLVM_DIR           = $(HOME)/libs/llvm3.7/llvm
LLVM_BUILD_DIR     = $(HOME)/libs/llvm3.7/llvm-build/Release+Asserts/bin
BINUTILS_BUILD_DIR = $(HOME)/libs/llvm3.7/binutils-build
endif

ifeq ($(HOST),safedispatch) # on safedispatch @ goto
LLVM_DIR           = $(HOME)/rami/chrome/cr33/src/third_party/llvm-3.7
LLVM_BUILD_DIR     =
BINUTILS_BUILD_DIR =
endif

ifeq ($(HOST),chromebuild) # on chromebuild
LLVM_DIR           = $(HOME)/src/src/third_party/llvm-3.7
LLVM_BUILD_DIR     =
BINUTILS_BUILD_DIR =
endif

ifeq ($(HOST),fry) # on fry
LLVM_DIR           = $(HOME)/work/sd3.0/llvm-3.7
LLVM_BUILD_DIR     = $(HOME)/work/sd3.0/llvm-rel-build/Release+Asserts/bin
BINUTILS_BUILD_DIR = $(HOME)/work/sd3.0/binutils-build
endif

ifeq ($(HOST),bender) # on fry
LLVM_DIR           = $(HOME)/work/sd3.0/llvm-3.7
LLVM_BUILD_DIR     = $(HOME)/work/sd3.0/llvm-build/Release+Asserts/bin
BINUTILS_BUILD_DIR =
endif

ifeq ($(HOST),zoidberg) # on chromebuild
LLVM_DIR           = $(HOME)/work/sd3.0/llvm-3.7
LLVM_BUILD_DIR     = $(HOME)/work/sd3.0/llvm-build/Release+Asserts/bin
BINUTILS_BUILD_DIR = $(HOME)/work/sd3.0/binutils-build
endif
